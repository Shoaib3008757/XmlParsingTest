		<voice id="BB1596-2"/>
	</explanation>
	</question>
	<answers>
		<answer correct="no">
			<text>Cruise control</text>
			<graphic></graphic>
		</answer>
		<answer correct="yes">
			<text>Quick acceleration</text>
			<graphic></graphic>
		</answer>
		<answer correct="no">
			<text>Slow braking</text>
			<graphic></graphic>
		</answer>
