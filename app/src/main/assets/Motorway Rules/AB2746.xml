		<voice id="AB2746-2"/>
	</explanation>
	</question>
	<answers>
		<answer correct="no">
			<text>Emergency vehicles only</text>
			<graphic></graphic>
		</answer>
		<answer correct="yes">
			<text>Overtaking</text>
			<graphic></graphic>
		</answer>
		<answer correct="no">
