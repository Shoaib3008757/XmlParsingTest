<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xmlparsingtest.ranglerz.com.xmlparsingtest.CategoryTest"
    tools:showIn="@layout/activity_category_test"
    android:background="@drawable/activity_background"
    >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewCategoryTest"
        android:layout_centerInParent="true"
        android:layout_above="@+id/footerLayout"
        android:layout_below="@+id/toolbar"
        android:dividerHeight="2sp"
        android:divider="@color/colorPrimary"
        android:padding="16dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/footerLayout"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Test"
            android:id="@+id/startTestCategoryTest"
            android:onClick="startTest"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/footer_button"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/buttonCancelCategoryTest"
            android:onClick="cancel"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:background="@drawable/footer_button"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>
</RelativeLayout>
